<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_6"
        
        android:gravity="center"
        android:padding="30dp" >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="40sp"
            android:textColor="#fff"
            android:textStyle="bold" />
        
                <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
             android:layout_marginTop="4dp"
            android:layout_below="@+id/header"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:textColor="#fff"
            android:layout_below="@+id/line"
            android:textSize="16sp"
            android:text="This app created by Vidrak Lev." />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_marginTop="5dp"
            android:text="@string/email"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:text="The developer of this application is not responsible for any loss or damage caused, or alleged to have been caused, directly or indirectly, by using this application, including but not limited to: monetary loss, other application damage, accidents, baldness, hallucinations, hipsters, brain damage, bad hair day, dope sickness and just crappy days."
             android:textColor="#fff"
            android:textSize="10sp" />

    </RelativeLayout>

</RelativeLayout>