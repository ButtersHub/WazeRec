<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_6"
        android:gravity="center"
        android:padding="30dp" >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:textSize="40sp"
            android:textColor="#fff"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
             android:layout_marginTop="4dp"
            android:layout_below="@+id/header"
            android:scaleType="fitXY"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/unlock_image"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_below="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/unlock" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/unlock_image"
            android:text="Recording this sound posible only in the pro version."
            android:textSize="16sp" />

        <Button
            android:id="@+id/upgrade_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_centerHorizontal="true"
            android:layout_margin="3dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/pp_selector_1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Go Get The Pro !!"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>